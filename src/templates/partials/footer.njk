<!-- /src/templates/partials/footer.njk -->
<footer class="footer" role="contentinfo">
    <div class="container footer-content">

        {# Contact Column #}
        <div class="footer-column">
            <h4>{{ t.footer.contact_title }}</h4>
            <ul class="footer-links" role="list">
                <li role="listitem">
                    <a href="#"
                       id="footer-email"
                       data-contact="email"
                       class="contact-link">
                        {{ t.footer.email }}
                    </a>
                </li>
                <li role="listitem">
                    <a href="#"
                       id="footer-phone"
                       data-contact="phone"
                       class="contact-link">
                        {{ t.footer.phone }}
                    </a>
                </li>
                <li role="listitem">
                    <a href="#"
                       id="footer-whatsapp"
                       data-contact="whatsapp"
                       class="contact-link">
                        {{ t.footer.whatsapp }}
                    </a>
                </li>
                <li role="listitem">
                    <a href="#"
                       id="footer-linkedin"
                       data-contact="linkedin"
                       class="contact-link">
                        {{ t.footer.linkedin }}
                    </a>
                </li>
                <li role="listitem">
                    <a href="#"
                       id="footer-facebook"
                       data-contact="facebook"
                       class="contact-link">
                        {{ t.footer.facebook }}
                    </a>
                </li>
            </ul>
        </div>

        {# Navigation Column #}
        <div class="footer-column">
            <h4>{{ t.footer.navigation }}</h4>
            <ul class="footer-links" role="list">
                <li role="listitem">
                    <a href="/{{ lang }}/about.html">{{ t.nav.about }}</a>
                </li>
                <li role="listitem">
                    <a href="/{{ lang }}/services.html">{{ t.nav.services }}</a>
                </li>
                <li role="listitem">
                    <a href="/{{ lang }}/blog.html">{{ t.nav.blog }}</a>
                </li>
                <li role="listitem">
                    <a href="/{{ lang }}/contact.html">{{ t.nav.contact }}</a>
                </li>
            </ul>
        </div>

        {# Languages Column #}
        <div class="footer-column">
            <h4>{{ t.footer.languages_title }}</h4>
            <ul class="footer-links" role="list">
                <li role="listitem">
                    <a href="/es/{{ slug }}.html"
                       lang="es"
                       hreflang="es"
                       class="{% if lang == 'es' %}active{% endif %}">
                        {{ t.footer.spanish }}
                    </a>
                </li>
                <li role="listitem">
                    <a href="/en/{{ slug }}.html"
                       lang="en"
                       hreflang="en"
                       class="{% if lang == 'en' %}active{% endif %}">
                        {{ t.footer.english }}
                    </a>
                </li>
                <li role="listitem">
                    <a href="/fr/{{ slug }}.html"
                       lang="fr"
                       hreflang="fr"
                       class="{% if lang == 'fr' %}active{% endif %}">
                        {{ t.footer.french }}
                    </a>
                </li>
            </ul>
        </div>

        {# Copyright #}
        <div class="footer-copyright">
            <p>&copy; {{ "now" | date("YYYY") }} {{ t.site.brand }}. {{ t.footer.copyright }}</p>
            <p class="footer-accessibility">
                <span aria-hidden="true">â™¿</span>
                <span class="sr-only">{{ t.ui.accessibility }}: </span>
                {{ t.footer.accessibility_note }}
            </p>
        </div>

    </div>
</footer>